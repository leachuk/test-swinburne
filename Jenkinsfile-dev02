pipeline {
  agent any
  stages {
    stage('Develop') {
        environment {
            DEV02_AUTHOR_CREDS = credentials('dev-author-creds')
        }
       steps {
         sh "mvn -Dvault.useProxy=false -DskipTests -e -U -P deploymentpackagejenkins,installdeploymentpackagejenkins clean install -Dcrx.host=swinburne-author-dev-02.at.isobaraustralia.com -Dcrx.username=${DEV02_AUTHOR_CREDS_USR} -Dcrx.password=${DEV02_AUTHOR_CREDS_PSW}  -B -Dorg.slf4j.simpleLogger.log.org.apache.maven.cli.transfer.Slf4jMavenTransferListener=warn"
         sh "mvn -Dvault.useProxy=false -DskipTests -e -U -P deploymentpackagejenkins,installdeploymentpackagejenkins clean install -Dcrx.host=swinburne-publisher-dev-02.at.isobaraustralia.com -Dcrx.username=${DEV02_AUTHOR_CREDS_USR} -Dcrx.password=${DEV02_AUTHOR_CREDS_PSW}  -B -Dorg.slf4j.simpleLogger.log.org.apache.maven.cli.transfer.Slf4jMavenTransferListener=warn"

           }
     }

    stage('CacheClearPublish') {
      environment {
        DEV02_PUBLISH1_CREDS = credentials('dev-publish1-creds')
      }
      steps {
        sh 'curl -u ${DEV02_PUBLISH1_CREDS} -X POST  http://52.63.178.158:4503/etc/acs-commons/dispatcher-flush/disp-flush/_jcr_content/configuration.flush.html'
      }
    }
  }
}