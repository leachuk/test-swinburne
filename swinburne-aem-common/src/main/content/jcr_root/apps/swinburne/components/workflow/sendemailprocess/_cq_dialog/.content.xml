<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Send Email with Process Payload"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.workflow-util]">
    <content
        granite:id="worfklow-sendemailprocess"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/tabs">
        <items jcr:primaryType="nt:unstructured">
            <common
                cq:hideOnEdit="true"
                jcr:primaryType="nt:unstructured"
                jcr:title="Common"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
            <process
                cq:hideOnEdit="true"
                jcr:primaryType="nt:unstructured"
                jcr:title="Process"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
            <processcommon
                jcr:primaryType="nt:unstructured"
                jcr:title="Common"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <basic
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        disabled="false"
                                        fieldLabel="Title"
                                        name="./jcr:title"/>
                                    <description
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        disabled="false"
                                        fieldLabel="Description"
                                        name="./jcr:description"/>
                                </items>
                            </basic>
                            <advanced
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Advanced Settings"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <advance
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Check if your handler will advance to the next step."
                                        fieldLabel="Handler Advance"
                                        name="./metaData/PROCESS_AUTO_ADVANCE"
                                        text="Handler Advance"
                                        value="true"/>
                                </items>
                            </advanced>
                        </items>
                    </column>
                </items>
            </processcommon>
            <processargs
                jcr:primaryType="nt:unstructured"
                jcr:title="Email Settings"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <arguments
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Custom Email Settings"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <templatePath
                                        fieldDescription="Select the email template"
                                        fieldLabel="Template Path"
                                        jcr:primaryType="nt:unstructured"
                                        name="./metaData/templatePath"
                                        required="{Boolean}true"
                                        rootPath="/"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"/>
                                    <participant
                                            fieldDescription="Select user or group to be notified with selected template.&#xa;[If this field is left empty, please make sure to provide 'To' address on the email-template.]"
                                            fieldLabel="To: User/Group"
                                            jcr:primaryType="nt:unstructured"
                                            name="./metaData/customParticipant"
                                            sling:resourceType="granite/ui/components/coral/foundation/authorizable/autocomplete"
                                            valueType="id"/>
                                </items>
                            </arguments>
                        </items>
                    </column>
                </items>
            </processargs>
        </items>
    </content>
</jcr:root>
