<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:tags="[workflow:wcm]"
        cq:template="/libs/cq/workflow/templates/model"
        jcr:description="This is the default request for deactivation workflow"
        jcr:primaryType="cq:PageContent"
        jcr:title="Request for Deactivation"
        sling:resourceType="cq/workflow/components/pages/model"
        multiResourceSupport="true">
        <flow
            jcr:primaryType="nt:unstructured"
            sling:resourceType="foundation/components/parsys">
            <participant
                jcr:lastModifiedBy="admin"
                jcr:primaryType="nt:unstructured"
                jcr:title="Request for deactivation"
                sling:resourceType="cq/workflow/components/model/participant">
                <metaData
                    jcr:primaryType="nt:unstructured"
                    DO_NOTIFY="true"
                    PARTICIPANT="power-authors"/>
            </participant>

            <or
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="cq/workflow/components/model/or"
                    branches="2"
                    orSplit="true">
                <_x0031_
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/flow/components/parsys">
                    <participant_0
                            jcr:description="Waiting for deactivation until the scheduled time is reached"
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Waiting for deactivation"
                            sling:resourceType="cq/workflow/components/model/participant">
                        <metaData
                                jcr:primaryType="nt:unstructured"
                                DO_NOTIFY="true"
                                PARTICIPANT="power-authors"
                                timeoutMillis="0"/>
                    </participant_0>
                    <process
                            jcr:description="Deactivates the page/asset."
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Deactivate Page/Asset"
                            sling:resourceType="cq/workflow/components/model/process">
                        <metaData
                                jcr:primaryType="nt:unstructured"
                                PROCESS="com.day.cq.wcm.workflow.process.DeactivatePageProcess"
                                PROCESS_AUTO_ADVANCE="true"/>
                    </process>
                </_x0031_>
                <_x0032_
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/flow/components/parsys">
                    <goto
                            jcr:description="Goto Step"
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Reject"
                            sling:resourceType="cq/workflow/components/model/goto"
                            PROCESS="com.adobe.granite.workflow.core.process.GotoProcess"
                            PROCESS_AUTO_ADVANCE="true">
                        <metaData
                                jcr:primaryType="nt:unstructured"
                                PROCESS="com.adobe.granite.workflow.core.process.GotoProcess"
                                PROCESS_AUTO_ADVANCE="true"
                                script="function check() {&#xd;&#xa;        return true;&#xd;&#xa;} "
                                TARGET_NODE_PATH="/conf/global/settings/workflow/models/request_for_activation/jcr:content/flow/sendtransientworkflo"/>
                    </goto>
                </_x0032_>
            </or>
            <sendtransientworkflo
                    jcr:description="This process will send email to current user when a transient workflow is completed"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Send Transient Workflow Completed Email"
                    sling:resourceType="dam/components/workflow/sendtransientworkflowcompletedemailprocess"
                    PROCESS="com.day.cq.dam.core.impl.process.SendTransientWorkflowCompletedEmailProcess"
                    PROCESS_AUTO_ADVANCE="true">
                <metaData
                        jcr:primaryType="nt:unstructured"
                        PROCESS="com.day.cq.dam.core.impl.process.SendTransientWorkflowCompletedEmailProcess"
                        PROCESS_AUTO_ADVANCE="true"/>
            </sendtransientworkflo>
        </flow>
    </jcr:content>
</jcr:root>
