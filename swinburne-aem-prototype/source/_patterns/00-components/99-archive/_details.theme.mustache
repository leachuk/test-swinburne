<!-- // PageDetails \\ -->
<div id="{{pageDetails.componentProperties.componentId}}" role="banner" class="page-details
  {{pageDetails.componentProperties.componentTheme}}
  {{pageDetails.componentProperties.componentModifier}}
  {{pageDetails.componentProperties.componentChevronId}}
  {{pageDetails.componentProperties.componentIcon}}
  "
  {{# pageDetails.componentProperties.pageBackgroundImage }}
     style="background-image: url('{{pageDetails.componentProperties.pageBackgroundImage}}')"
  {{/ pageDetails.componentProperties.pageBackgroundImage }}


  {{# pageDetails.componentProperties.componentModules }}
     data-module="{{pageDetails.componentProperties.componentModules}}"
  {{/ pageDetails.componentProperties.componentModules }}
>
  <div class="container-full">
    <!-- pagedetails header-->
    <header>
      <div class="container">
        <div class="row align-items-center">
          <div class="col-12 col-md-4 colctrl">
            {{^ pageDetails.componentProperties.hideTitle }}
              <h1 data-toggle="collapse" href="#collapse" role="button" aria-expanded="false" aria-controls="collapse" class="collapsed">{{pageDetails.componentProperties.pageTitle}}</h1>
            {{/pageDetails.componentProperties.hideTitle}}
          </div>
          <div class="col-12 col-md-8 colctrl">
            {{# pageDetails.componentProperties.showToolbar }}
              <div class="description collapse" id="collapse">

                <ul class="navlist">
                  <li class="active">
                    <a href="#">Menu Item 1</a>
                  </li>
                  <li>
                    <a href="#">Menu Item 2</a>
                  </li>
                  <li>
                    <a href="#">Menu Item 3</a>
                  </li>
                </ul>

              </div>
            {{/pageDetails.componentProperties.showToolbar}}
          </div>
        </div>
      </div>
    </header>
    <!-- pagedetails footer-->

    {{!-- ColCtrl : Varied Layout : (8,4 widths) --}}
    <div class="colctrl colctrl-2c">
      <div class="row align-items-center">
        <div class="col-sm col-md-8 colctrl">
          {{!-- RichText --}}
          {{> components-text:text-c1|text-left(
            h1Modifiers: "h1",
            hideH1: true,
            hideH2: false,
            hideLEAD: true,
            hidePARAGRAPH: true,
          ) }}
        </div>
        <!-- modifier: padding-right 0 -->
        <div class="col-sm col-md-4 colctrl pr-md-0">
          {{!-- Image --}}
          {{> components-image(
            source: "/images/placeholders/UCHerowithShape1.jpg"
          )}}
        </div>
      </div>
    </div>

    {{!-- Breadcrumbs --}}
    {{> components-breadcrumb }}
  </div>
</div>
