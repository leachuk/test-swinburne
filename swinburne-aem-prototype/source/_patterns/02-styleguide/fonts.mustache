<div class="container my-5">
  <div class="row">
    <h1>{{ fonts_title }}</h1>
  </div>
  {{# fonts }}
    <hr/>
    {{# font }}
      <div class="sg-section font">
        <h2 class="{{ class }}">{{ name }}</h2>
        <div class="col-12">
          <p class="{{ class }}">{{ value }}</p>
          <div class="sg-label {{ class }}">Class: {{ class }}</div>
        </div>
      </div>
    {{/ font }}
  {{/ fonts }}
</div>
