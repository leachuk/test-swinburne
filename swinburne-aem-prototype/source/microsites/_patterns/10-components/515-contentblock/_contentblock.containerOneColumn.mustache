<div {{> components-componentAttributes( componentName: "contentblock",
                                         componentId: "{{{ id }}}",
                                         componentTheme: "{{{ theme }}}",
                                         componentModifier: "{{{ modifier }}}",
                                         componentModules: "{{{ modules }}}",
                                         componentChevron: "{{{ chevron }}}",
                                         componentIcon: "{{{ icon }}}",
                                         componentStyle: "{{{ style }}}" ) }}
>
  <div class="container">
    <div class="aem-Grid aem-Grid--12 aem-Grid--default--12 ">
        {{> components-text.default( text: "{{{ text }}}") }}
    </div>
  </div>
</div>
