    <properties>
        <geb.version>2.0</geb.version>
        <selenium.version>3.7.1</selenium.version>
        <groovy.version>2.4.13</groovy.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <spock.version>1.1-groovy-2.4</spock.version>

        <surefire.plugin.version>2.20</surefire.plugin.version>
        <surefire.plugin.parallel>methods</surefire.plugin.parallel>
        <surefire.plugin.threadCount>4</surefire.plugin.threadCount>
        <surefire.plugin.forkCount>4</surefire.plugin.forkCount>
        <surefire.plugin.threadCountSuites>5</surefire.plugin.threadCountSuites>
        <surefire.plugin.reuseForks>true</surefire.plugin.reuseForks>

        <!-- Sets the environment set to use with the functional tests -->
        <geb.env>local</geb.env>
        <geb.build.reportsDir>target/test-reports/geb</geb.build.reportsDir>

        <surefire.test.runOrder>alphabetical</surefire.test.runOrder>

        <com.athaydes.spockframework.report.outputDir>target/spock-reports</com.athaydes.spockframework.report.outputDir>

        <maven.build.timestamp.format>yyyy-MM-dd HH</maven.build.timestamp.format>
    </properties>


