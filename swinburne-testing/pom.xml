    <artifactId>swinburne-testing</artifactId>
    <packaging>jar</packaging>
    <version>0.1-SNAPSHOT</version>
    <name>swinburne :: swinburne :: parent :: testing</name>
    <description>Tests for AEM and Prototype</description>

